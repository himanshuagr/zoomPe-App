<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myCard"
    android:background="#e3f0ff">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2f4c6e"
        android:id="@+id/mytoolbar"
        app:title="My card"
        app:titleMarginStart="30dp"
        app:titleTextColor="@color/white"
        app:logo="@drawable/ic_baseline_arrow_back_24"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/cardview"
        android:layout_below="@id/mytoolbar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/cardback"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/visa"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/rfid"
                tools:ignore="VectorDrawableCompat"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="55dp"
                android:layout_marginRight="20dp"/>

            <ImageView
                android:id="@+id/chip"
                android:layout_width="70dp"
                android:layout_height="70dp"

                app:srcCompat="@drawable/chip"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardnumber"
                android:textColor="@color/white"
                android:layout_below="@id/chip"
                android:text=""
                android:textSize="22sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pin3"
                android:textColor="@color/white"
                android:layout_below="@id/cardnumber"
                android:text="PIN :"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="21dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="NFC Card"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:text="zoomPe"
                android:textSize="20sp"
            android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"

                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardname"
                android:layout_marginTop="15dp"
                android:text=""
                android:textSize="20sp"
               android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"

                android:textColor="@color/white"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/deactivate"
        android:background="@drawable/layout_round"
        android:text="Deactivate card"
        android:textColor="@color/white"
        android:layout_below="@+id/cardview"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2f4c6e"/>



</RelativeLayout>